{
  "@import": [
    "resdir/resource#^0.1.0",
    "1place/js-resource#^0.2.1"
  ],
  "id": "liaison/component-server",
  "version": "0.1.2",
  "isPublic": true,
  "authors": [
    "Manuel Vila <hi@mvila.me>"
  ],
  "license": "MIT",
  "repository": "https://github.com/liaisonjs/liaison.git",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "fs-extra": "^8.1.0",
    "@liaison/component-http-server": "^0.1.0",
    "node-notifier": "^5.2.1",
    "@resdir/console": "^0.1.16",
    "@resdir/error": "^0.1.0"
  },
  "transpiler": {
    "run": {
      "@listen": "@fileModified"
    }
  },
  "@export": {
    "@name": "Liaison component server",
    "@description": "Base resource for Liaison component servers",
    "@implementation": "./dist/cjs",
    "domainName": {
      "@type": "string",
      "@description": "The domain name of your component server",
      "@examples": [
        "backend.domain.com"
      ]
    },
    "environment": {
      "@type": "object",
      "@description": "Environment variables made available in the component server"
    },
    "files": {
      "@type": "array",
      "@description": "List of files and directories to deploy",
      "@examples": [
        [
          "./dist/cjs",
          "node_modules"
        ]
      ]
    },
    "main": {
      "@type": "string",
      "@description": "The file that exports your component provider",
      "@examples": [
        [
          "./dist/node/cjs/index.js",
          "./lib/main.js"
        ]
      ]
    },
    "reinstallDependenciesWhileDeploying": {
      "@type": "boolean",
      "@isHidden": true
    },
    "deploy": {
      "@type": "method",
      "@description": "Deploy your component server",
      "@before": [
        "@build",
        "validate"
      ]
    },
    "validate": {
      "@type": "method",
      "@description": "Validate the resource properties"
    },
    "testServer": {
      "@description": "A simple HTTP server to help you test your component server locally",
      "@aliases": [
        "server"
      ],
      "@implementation": "./dist/cjs/test-server",
      "port": {
        "@description": "The TCP port the test server should use",
        "@default": 6789
      },
      "delay": {
        "@description": "Delay (in millisecond) before responding (helps to simulate slow network)",
        "@default": 0
      },
      "errorRate": {
        "@description": "Rate (in percentage) of error in handling requests (helps to simulate unreliable network)",
        "@default": 0
      },
      "start": {
        "@type": "method",
        "@description": "Start the test server",
        "@input": {
          "notify": {
            "@type": "boolean",
            "@description": "Show a notification when the server has started",
            "@default": false
          }
        }
      }
    }
  }
}
